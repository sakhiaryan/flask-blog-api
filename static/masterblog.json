{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0",
    "description": "Simple blogging API with CRUD, search, and sorting."
  },
  "host": "127.0.0.1:5002",
  "basePath": "/",
  "schemes": ["http"],
  "tags": [
    { "name": "Post", "description": "Post API - CRUD & search" }
  ],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "definitions": {
    "Post": {
      "type": "object",
      "required": ["id", "title", "content"],
      "properties": {
        "id": { "type": "integer", "format": "int32", "example": 123 },
        "title": { "type": "string", "example": "Flask Tips" },
        "content": { "type": "string", "example": "Using Flask to build APIs is fun." }
      }
    },
    "PostInput": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string" }
      }
    }
  },
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Return all posts (optionally sorted).",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": ["title", "content"],
            "description": "Field to sort by."
          },
          {
            "name": "direction",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": ["asc", "desc"],
            "default": "asc",
            "description": "Sort direction."
          }
        ],
        "responses": {
          "200": {
            "description": "List of posts.",
            "schema": { "type": "array", "items": { "$ref": "#/definitions/Post" } }
          },
          "400": {
            "description": "Invalid sort parameters."
          }
        }
      },
      "post": {
        "summary": "Create a new post.",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/PostInput" }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created.",
            "schema": { "$ref": "#/definitions/Post" }
          },
          "400": {
            "description": "Missing required fields."
          }
        }
      }
    },
    "/api/posts/{id}": {
      "put": {
        "summary": "Update a post by id.",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/PostInput" }
          }
        ],
        "responses": {
          "200": {
            "description": "Updated post.",
            "schema": { "$ref": "#/definitions/Post" }
          },
          "404": {
            "description": "Post not found."
          }
        }
      },
      "delete": {
        "summary": "Delete a post by id.",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int32"
          }
        ],
        "responses": {
          "200": {
            "description": "Delete confirmation message."
          },
          "404": {
            "description": "Post not found."
          }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Search posts by title and/or content (partial, case-insensitive).",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Search term for title."
          },
          {
            "name": "content",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Search term for content."
          }
        ],
        "responses": {
          "200": {
            "description": "List of matching posts (may be empty).",
            "schema": { "type": "array", "items": { "$ref": "#/definitions/Post" } }
          }
        }
      }
    }
  }
}